<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="Oct 17,2016"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvcheckintime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvdate"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/tvdate"
            android:layout_toRightOf="@+id/tvdate"
            android:background="@drawable/roundedge_green"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="0:0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvcheckouttime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvcheckintime"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:background="@drawable/roundedge_orange"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="0:0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/tvtotalhrs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvcheckouttime"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:text="0hrs"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/tvcheckintime"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/tvcheckintime"
            android:layout_toRightOf="@+id/tvcheckintime"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/imageButton"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/tvcheckouttime"
            android:layout_toRightOf="@+id/tvcheckouttime"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/tvapprovalstatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/tvtotalhrs"
            android:layout_toRightOf="@+id/tvtotalhrs"
            android:background="@drawable/bluedot"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>