<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvcheckoutcurrentdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Oct 17,2016"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvtotalahrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvcurrentdate"
        android:layout_alignStart="@+id/tvcurrentdate"
        android:layout_below="@+id/tvcurrentdate"
        android:layout_marginLeft="15dp"
        android:text="Total Hours"
        android:textColor="@color/blakkish_textcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangularbox_gray"
        android:orientation="horizontal">


        <TextView

            android:id="@+id/tvCodeNameDetail12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Checked In"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="10:30 PM"
android:id="@+id/tvcheckintime"
            />


    </LinearLayout>

    <com.csn.ems.emsconstants.NestedListView
        android:id="@+id/listView_breakDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="@null"></com.csn.ems.emsconstants.NestedListView>

    <LinearLayout
        android:id="@+id/ll_breaktime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangularbox_gray"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Break Started"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvbreaktime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="10:30 PM"

                />


        </LinearLayout>

        <Button
            android:id="@+id/btncontinueshift"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:background="@color/green"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Continue Shift"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_startbreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangularbox_theme_color"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edcomments"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left"
            android:hint="Click to add note"
            android:padding="10dp"
            android:textSize="16sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dp"
            android:background="@color/gray_light" />

        <ImageButton
            android:id="@+id/imgbtnbreak"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/coffee_cup"
            android:gravity="right"


            />


    </LinearLayout>

    <Button
        android:id="@+id/btncheckout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/red"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Check Out"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
