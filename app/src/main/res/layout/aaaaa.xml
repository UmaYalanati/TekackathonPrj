<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvdate"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:text="Oct 17,2016"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvcheckintime"
                style="@style/Base.TextAppearance.AppCompat.Inverse"
                android:background="@drawable/roundedge_green"
                android:gravity="center"
                android:padding="3dp"
                android:text="00:00hrs" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/tvcheckouttime"
                style="@style/Base.TextAppearance.AppCompat.Inverse"
                android:background="@drawable/roundedge_orange"
                android:gravity="center"
                android:padding="3dp"
                android:text="00:00hr" />

            <ImageView
                android:id="@+id/imageButton2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/tvtotalhrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="15hrs"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/tvapprovalstatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center" />
        </TableRow>


    </TableLayout>


</LinearLayout>
