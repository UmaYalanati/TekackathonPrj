<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_weight="1"
            android:text="Oct 17,2016"
            android:textColor="@color/blakkish_textcolor" />

        <TextView

            android:layout_weight="1"
            android:id="@+id/tvcheckintime"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/tvdate"

            android:background="@drawable/roundedge_green"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="0:0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/tvcheckintime"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/tvcheckintime"
            android:layout_toRightOf="@+id/tvcheckintime"
            app:srcCompat="@drawable/location" />

        <TextView

            android:layout_weight="1"
            android:id="@+id/tvcheckouttime"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/tvcheckintime"

            android:background="@drawable/roundedge_orange"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="0:0"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"

            />

        <TextView
            android:id="@+id/tvleaves"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2"
            android:textColor="@color/blakkish_textcolor"

            />

        <TextView

            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tvtotalhrs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvcheckouttime"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:text="00.11hrs"
            android:textColor="@color/black"
            android:textSize="12sp"

            />



    </LinearLayout>
</LinearLayout>
